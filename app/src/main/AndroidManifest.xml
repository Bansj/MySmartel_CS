<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- 인터넷 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 인터넷 연결 확인 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/appicon_smartel_original"
        android:label="스마텔 고객센터"
        android:supportsRtl="true"
        android:theme="@style/Theme.MySmartel_ver_1"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name="com.smartel.mysmartel_ver_1.FindPWActivity"
            android:exported="false" />
        <activity
            android:name="com.smartel.mysmartel_ver_1.WebViewActivity"
            android:exported="false"
            android:label="Web View Activity" />
        <activity
            android:name="com.smartel.mysmartel_ver_1.Setting"
            android:exported="false" />
        <activity
            android:name="com.smartel.mysmartel_ver_1.PagerActivity"
            android:exported="false" />
        <activity
            android:name="com.smartel.mysmartel_ver_1.PrepaidDetail"
            android:exported="false" />
        <activity
            android:name="com.smartel.mysmartel_ver_1.PrepaidAccount"
            android:exported="false" />
        <activity
            android:name="com.smartel.mysmartel_ver_1.PrepaidPhoneEasyCheck"
            android:exported="false" />
        <activity
            android:name="com.smartel.mysmartel_ver_1.LoginActivity"
            android:exported="false" />
        <activity
            android:name="com.smartel.mysmartel_ver_1.Splash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartel.mysmartel_ver_1.MainActivity"
            android:exported="true" />
    </application>

</manifest>