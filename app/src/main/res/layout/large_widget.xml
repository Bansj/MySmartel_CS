<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.MySmartel_ver_1.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/wg_layout"
    android:theme="@style/Theme.MySmartel_ver_1.AppWidgetContainer">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:src="@drawable/smartel_logo_letter_original_130x60"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"/>

        <ImageButton
            android:id="@+id/btn_update"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_update_16"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"/>

        <ProgressBar
            android:id="@+id/pgBar_leftData"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="80dp"
            android:layout_height="8dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="55"
            android:progressDrawable="@drawable/progressbar_orange"
            android:progressTint="@color/blue_600"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <ProgressBar
            android:id="@+id/pgBar_Call"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="80dp"
            android:layout_height="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="10dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="80"
            android:progressDrawable="@drawable/progressbar_orange"
            android:progressTint="@color/gold"
            android:layout_centerInParent="true"/>

        <ProgressBar
            android:id="@+id/pgBar_M"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="80dp"
            android:layout_height="8dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="15dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="60"
            android:progressDrawable="@drawable/progressbar_orange"
            android:progressTint="@color/lime_green"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/wg_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATA"
            android:layout_below="@id/pgBar_leftData" />

        <TextView
            android:id="@+id/wg_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call"
            android:layout_below="@id/pgBar_Call"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/wg_M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message"
            android:layout_below="@id/pgBar_M"
            android:layout_alignRight="@id/pgBar_M"/>

</RelativeLayout>