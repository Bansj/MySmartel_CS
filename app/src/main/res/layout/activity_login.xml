<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartelmall.mysmartel_ver_1.LoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/img_fragment2"
            android:layout_width="240dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="85dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="160dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/smartel_noback_logo"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/edit_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="105dp"
            android:background="@drawable/editbox_action_shape"
            android:hint=" 회선번호 (ex. 01012345678)"
            android:inputType="number"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_fragment2" />

            <ImageButton
                android:id="@+id/btn_clearID"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/btn_circle"
                android:backgroundTint="#dcdcdc"
                android:src="@drawable/ic_edit_text_close_16"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/edit_id"
                app:layout_constraintEnd_toEndOf="@+id/edit_id"
                app:layout_constraintTop_toTopOf="@+id/edit_id" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/editbox_action_shape"
                android:hint=" 비밀번호"
                android:inputType="textPassword"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_id" />

            <ImageButton
                android:id="@+id/btn_clearPW"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/btn_circle"
                android:backgroundTint="#dcdcdc"
                android:src="@drawable/ic_edit_text_close_16"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/edit_password"
                app:layout_constraintEnd_toEndOf="@+id/edit_password"
                app:layout_constraintTop_toTopOf="@+id/edit_password" />

            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@+id/edit_password"
                tools:layout_editor_absoluteX="21dp">

                <Switch
                    android:id="@+id/switch_autoLogin"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:checked="true"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="자동 로그인" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_rectangle_orange"
                android:text="로그인"
                android:textColor="#fff"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
                tools:layout_editor_absoluteX="21dp" />


            <Button
                android:id="@+id/btn_signUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_rectangle_orange"
                android:text="회원가입"
                android:textColor="#fff"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_login"
                tools:layout_editor_absoluteX="25dp" />

            <TextView
                android:id="@+id/txt_findPW"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:gravity="center"
                android:text="비밀번호 찾기"
                android:textColor="#FF7F50"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_signUp" />

            <Button
                android:id="@+id/btn_prepaidPhoneEasyCheck"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_rectangle_orange"
                android:text="선불폰 간편조회"
                android:textColor="#fff"
                android:textSize="17dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/txt_findPW"
                tools:layout_editor_absoluteX="21dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
