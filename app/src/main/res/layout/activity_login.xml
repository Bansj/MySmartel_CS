<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.smartelmall.mysmartel_ver_1.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:layout_gravity="center">
        <WebView
            android:id="@+id/webviewFindPW"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/img_fragment2"
                android:layout_width="240dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="85dp"
                android:src="@drawable/smartel_noback_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:background="#fff"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="80dp">

            <EditText
                android:id="@+id/edit_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/editbox_action_shape"
                android:hint=" 회선번호 (ex. 01012345678)"
                android:inputType="number"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/editbox_action_shape"
                android:hint=" 비밀번호"
                android:inputType="textPassword"
                android:textSize="14dp" />

            <LinearLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/switch_autoLogin"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:checked="true"
                    android:thumb="@drawable/switch_thumb"
                    android:track="@drawable/switch_track"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="자동 로그인"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_rectangle_orange"
                android:text="로그인"
                android:textColor="#fff"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_signUp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_rectangle_orange"
                android:text="회원가입"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txt_findPW"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="비밀번호 찾기"
                android:textStyle="bold"
                android:textSize="12dp"
                android:textColor="#FF7F50" />


            <Button
                android:id="@+id/btn_prepaidPhoneEasyCheck"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_rectangle_orange"
                android:text="선불폰 간편조회"
                android:textColor="#fff"
                android:textSize="17dp"
                android:visibility="invisible"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>